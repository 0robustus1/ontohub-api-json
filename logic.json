{
  "id": "https://masterthesis.rightsrestricted.com/api/logic.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Logic",
  "description": "A logic as registered with Ontohub",
  "type": "object",
  "properties": {
    "iri": { "$ref": "generic/definitions.json#/definitions/iri" },
    "name": {
      "description": "The name of the logic",
      "type": "string"
    },
    "description": {
      "description": "Description of the logic",
      "type": "string"
    },
    "standardization_status": {
      "description": "The standardization status of the logic",
      "type": "string"
    },
    "defined_by": {
      "description": "The resource which defined the logic",
      "type": ["string", "null"]
    },
    "_links": { "$ref": "generic/definitions.json#/definitions/_links" }
  },
  "required": [
    "iri", "name"
  ]
}
